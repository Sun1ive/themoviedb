.mycard
  min-height: 650px;
  transition .2s linear
  justify-content space-between
  display flex
  flex-flow column
  .mycard__media
    position relative
  .overflow
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color #fff
    z-index 5
    opacity 0
    transition .2s
    &:hover
      opacity 0.2
  &:hover
    cursor pointer
    box-shadow 0 2px 10px lightblue + 50%
  .genres
    font-weight bold
    color blue + 30%
.search__box
  padding .5rem 3rem
  margin-bottom 2rem
